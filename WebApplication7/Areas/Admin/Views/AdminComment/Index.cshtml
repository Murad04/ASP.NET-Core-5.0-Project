@using EntityLayer
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@*<td><a href="#"><i class="fa fa-check text-navy"></i></a></td>*@

<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar  </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanici</th>
                                    <th>Baslik</th>
                                    <th>Blog</th>
                                    <th>Tarih</th>
                                    <th>Puan</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CommentID</td>
                                        <td>@item.CommentUserName</td>
                                        <td>@item.CommentTitle</td>
                                        <td>@item.Blogs.BlogTitle</td>
                                        <td>@item.Blogs.BlogDate</td>
                                        @if (item.BlogScore <= 3)
                                        {
                                            <td style="color:red"> <i class="fa fa-level-down" style="color:red"></i> @item.BlogScore </td>
                                        }
                                        else if (item.BlogScore >= 4 && item.BlogScore <= 6)
                                        {
                                            <td style="color:yellow">@item.BlogScore </td>
                                        }
                                        else if (item.BlogScore >= 7 && item.BlogScore < 9)
                                        {
                                            <td style="color:blue"> <i class="fa fa-level-up" style="color:blue"></i> @item.BlogScore </td>
                                        }
                                        else
                                        {
                                            <td style="color:green"> <i class="fa fa-level-up" style="color:green"></i> @item.BlogScore </td>
                                        }
                                        <td><a href="#" class="btn btn-outline-warning">Guncelle</a></td>
                                        <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="footer">
        <div class="float-right">
            10GB of <strong>250GB</strong> Free.
        </div>
        <div>
            <strong>Copyright</strong> Example Company &copy; 2014-2018
        </div>
    </div>


</body>

</html>
