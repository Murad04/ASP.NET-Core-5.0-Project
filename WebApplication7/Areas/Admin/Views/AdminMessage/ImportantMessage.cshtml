@using EntityLayer.Concrete
@model List<Message2> 
@{
    ViewData["Title"] = "ImportantMessage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content">
        <div class="row">
            @await Html.PartialAsync("~/Areas/Admin/Views/AdminMessageMenu/Default.cshtml")
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">

                    <form method="get" action="index.html" class="float-right mail-search">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm" name="search" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-sm btn-primary">
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                    <h2>
                        Important (@ViewBag.v4)
                    </h2>
                    @await Html.PartialAsync("~/Areas/Admin/Views/AdminMessageTopMenu/Default.cshtml")

                </div>
                <div class="mail-box">

                    <table class="table table-hover table-mail">
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="unread">
                                    
                                    <td class="mail-ontact"><a href="mail_detail.html">@item.ReceiverUser.WriterName</a></td>
                                    <td class="mail-subject"><a href="mail_detail.html">@item.Message_Title</a></td>
                                    <td class=""><i class="fa fa-paperclip"></i></td>
                                    <td class="text-right mail-date">@item.Date</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>