@using EntityLayer.Concrete
@model List<AppRole> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5 style="text-align:center">Roller</h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Baslik</th>
                                    <th colspan="2" style="text-align:center">Islemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/AdminRole/UpdateRole/@item.Id/" class="btn btn-outline-warning">Guncelle</a></td>
                                        <td><a href="/Admin/AdminRole/DeleteRole/@item.Id/" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminRole/AddRole/" class="btn btn-outline-success">Ekle</a>
                        <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-info">Kullanıcı role listesi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

</html>
