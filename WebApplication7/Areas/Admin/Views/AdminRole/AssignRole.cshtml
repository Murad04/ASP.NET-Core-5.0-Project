@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" />
            <label class="form-check-label" for="@Model[i].Exist">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-outline-primary">Değişiklikleri kaydet</button>
</form>
<a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-primary">Kullanıcı listesi</a>
