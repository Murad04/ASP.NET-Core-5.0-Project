@using EntityLayer.Concrete
@model List<Message2TrashBin>
@{
    ViewData["Title"] = "Trash";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content">
        <div class="row">
            @await Html.PartialAsync("~/Areas/Admin/Views/AdminMessageMenu/Default.cshtml")
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">

                    <form method="get" action="index.html" class="float-right mail-search">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm" name="search" placeholder="Mail ara">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-sm btn-primary">
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                    <h2>
                        Çöp kutusu (@ViewBag.v2)
                    </h2>
                    <div class="mail-tools tooltip-demo m-t-md">
                        <div class="btn-group float-right">
                            <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                            <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>

                        </div>
                      
                    </div>
                </div>
                <div class="mail-box">

                    <table class="table table-hover table-mail">
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="unread">
                                    <td class="check-mail">
                                        <input type="checkbox" class="i-checks">
                                    </td>
                                    <td class="mail-ontact"><a href="#">@item.Message_ID</a></td>
                                    <td class="mail-subject"><a href="#">@item.Message_Title</a></td>
                                    <td><a href="/Admin/Message2TrashBin/DeleteMessage/@item.Message_ID/" class="btn btn-outline-danger" onclick="return confirm('Silinsimmi? : blog')">Sil</a></td>
                                    <td class="text-right mail-date">@item.Date</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
