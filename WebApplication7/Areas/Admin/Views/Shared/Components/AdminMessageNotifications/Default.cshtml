@model IEnumerable<EntityLayer.Concrete.Message2>
<li class="dropdown">
    <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
        <i class="fa fa-envelope"></i>  <span class="label label-warning">@ViewBag.countmessage</span>
    </a>
    @foreach (var item in Model)
    {
        <ul class="dropdown-menu dropdown-messages">
            <li>
                <div class="dropdown-messages-box">
                    <a class="dropdown-item float-left" href="#">
                        <img alt="image" class="rounded-circle" src="@item.SenderUser.WriterImage">
                    </a>
                    <div class="media-body">
                        <strong>@item.SenderUser.WriterName</strong> @item.Message_Context <br>
                        <small class="text-muted">@item.Date.ToLongDateString()</small>
                    </div>
                </div>
            </li>
            <li class="dropdown-divider"></li>
        </ul>
    }
</li>