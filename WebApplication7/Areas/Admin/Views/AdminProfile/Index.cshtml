@model AdminUpdateViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar bilgi guncelleme</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Admin Ad Soyad</label><br />
                    <input type="text" asp-for="@Model.AdminName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kullanici ad </label>
                    <input type="text" asp-for="@Model.AdminUsername" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Parol </label>
                    <input type="password" asp-for="@Model.AdminPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Hakkında</label>
                    <input type="text" asp-for="@Model.AdminBio" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Profil sekli</label>
                    <input type="file" asp-for="@Model.AdminImage" class="file-upload-default" />
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Dosya yukle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resmi sec</button>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Guncelle</button>
            </form>
        </div>
    </div>
</div>