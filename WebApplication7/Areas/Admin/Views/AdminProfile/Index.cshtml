@model AdminUpdateViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Writer Informations Update</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Name/Surname</label><br />
                    <input type="text" asp-for="@Model.AdminName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Username</label>
                    <input type="text" asp-for="@Model.AdminUsername" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Password </label>
                    <input type="password" asp-for="@Model.AdminPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">About</label>
                    <input type="text" asp-for="@Model.AdminBio" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Profile Image</label>
                    <input type="file" asp-for="@Model.AdminImage" class="file-upload-default" />
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload a photo">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Select an image</button>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Update</button>
            </form>
        </div>
    </div>
</div>