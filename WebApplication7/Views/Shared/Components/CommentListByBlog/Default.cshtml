@model IEnumerable<EntityLayer.Comment>
<div class="comment-top">

    @if (Model.Count() == 0)
    {
        <div class="media-body">
           <p>
               Write the first comment
           </p>
        </div>
    }
    else
    {
        <h4>Comments</h4>
        <br />
        @foreach (var item in Model.Take(4))
        {
            <br />
            <div class="media">

                <img src="~/CoreBlogTema-main/web/images/t1.jpg" alt="" style="border-bottom-left-radius:8px;border-bottom-right-radius:8px;border-top-right-radius:8px;border-top-left-radius:8px;height:60px;" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
</div>