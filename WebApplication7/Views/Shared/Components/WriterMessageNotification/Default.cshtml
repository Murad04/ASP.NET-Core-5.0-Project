@model IEnumerable<EntityLayer.Concrete.Message2>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Messages</h6>
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="@item.SenderUser.WriterImage" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Message_Title (@item.SenderUser.WriterName)</h6>
                @if (@item.Date.Hour > DateTime.Now.Hour)
                {
                    <p class="text-gray mb-0">@item.Message_Context...</p>
                }
                else
                {

                    <p class="text-gray mb-0"> @item.Message_Context </p>
                }
            </div>
        </a>
        <div class="dropdown-divider"></div>
    }
    <h6 class="p-3 mb-0 text-center"> new messages</h6>
</div>