@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">MWbLOG</h1>

            </div>
            <h3>Kayit ekrani</h3>
            <p>Yeni hesap</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" placeholder="Ad soyad">
                </div>
                <br />
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
                </div>
                <br />
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Sifre" asp-for="@Model.Password">
                </div>
                <br />
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Sifre tekrar" asp-for="@Model.ConfirmPassword">
                </div>
                <br />
                <div class="form-group">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Kullanici ad" asp-for="@Model.Username">
                </div>
                <br />
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanim ve gizlilik sartlarini okudum </label></div>
                </div>
                <br />
                <button type="submit" class="btn btn-primary block full-width m-b">Kayit ol</button>

                <p class="text-muted text-center"><small>Bir hesabiniz varmi?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giris yap</a>
                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>
            </form>
            <p class="m-t"> <small>ASP.NET Core 5.0 Proje Kampi. Tum haklar saklidir @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
    $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
