@model EntityLayer.Writer

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>WriterEditProfile</h1>

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar bilgi guncelleme</h4>
            <form class="forms-sample">
                @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
                <div class="form-group">
                    <label for="exampleInputName1">Yazar Ad Soyad</label><br />
                    @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Hakkinda </label>
                    @Html.TextAreaFor(x => x.WriterAbout, 5, 5, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Sifre</label>
                    @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Sifreni tekrarlayin</label>
                    @Html.TextBoxFor(x => x.WriterPassword2, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Cinsiyyet</label>
                    <select class="form-control" id="exampleSelectGender">
                        <option>Erkek</option>
                        <option>Kadin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Profil sekli</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Dosya yukle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resmi sec</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputCity1">Mail adresi</label>
                    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", type = "email" })
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Guncelle</button>
                <button class="btn btn-light">Iptal</button>
            </form>
        </div>
    </div>
</div>
}