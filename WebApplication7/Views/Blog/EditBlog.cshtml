@model EntityLayer.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blogun guncellenmesi</h1>

@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    @Html.Label("Blog ID❌")
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control", @disabled = "true", @style = "border-color:red;" })
    <br />
    @Html.Label("Blog Baslik✅")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control", @style = "border-color:green;" })
    <br />
    @Html.Label("Blog Content✅")
    @Html.TextBoxFor(x => x.BlogContent, new { @class = "form-control", @style = "border-color:green;" })
    <br />
    @Html.Label("Blog Status✅")
    @Html.TextBoxFor(x => x.BlogStatus, new { @class = "form-control", @style = "border-color:green;" })
    <br />
    @Html.Label("Blog Kategori✅")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cvu, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Sekil✅")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control", @style = "border-color:green;" })
    <br />
    @Html.Label("Blog Thumbnail✅")
    @Html.TextBoxFor(x => x.BlogThumbNailImage, new { @class = "form-control", @style = "border-color:green;" })
    <br />
    @Html.Label("Blog Date✅")
    @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control", @style = "border-color:green;"})
    <br />

    <button class="btn btn-outline-success">Guncelle</button>
}