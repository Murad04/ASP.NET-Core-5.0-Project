@using EntityLayer
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Bloglarım</h1>

<table class="table table-bordered table-hover" style="border-color:white;">
    <tr>
        <th>#</th>
        <th>Blog Topic</th>
        <th>Date</th>
        <th>Category</th>
        <th>Status</th>
        <th colspan=2 style="text-align:center;">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.category.CategoryName</td>
            @if (item.BlogStatus == true)
            {
                <td><span class="badge badge-success">Aktif</span></td>
            }
            else
            {
                <td><span class="badge badge badge-secondary">Pasif</span></td>
            }
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-outline-danger" onclick="return confirm('Do you want to delete it? : @item.BlogTitle blog')">Delete</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-outline-warning">Update</a></td>
        </tr>
    }
</table>

<a href="/Blog/BlogAdd/" class="btn btn-outline-behance">Add</a>
