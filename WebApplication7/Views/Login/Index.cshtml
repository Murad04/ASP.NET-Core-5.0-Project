@model UserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Oturum Ac</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form  method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Kullanıcı ad</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" asp-for="@Model.username" aria-describedby="emailHelp" placeholder="Kullanici adiniz" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Sifre</label>
                        <input type="password" class="form-control" asp-for="@Model.password" id="exampleInputPassword1" placeholder="" required="">
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giris yap</button>
                    <p><a href="/Register/Index/"> Hesabın yokmu</a></p>
                    <p><a href="/Register/ResetPassword/"> Şifre yenile </a></p>
                </form>
            </div>
        </div>
    </div>
</section>
